{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Projecto metadata",
  "type": "object",
  "required": ["id", "titulo", "responsavel", "created_at", "status", "summary"],
  "properties": {
    "id": {"type": "string"},
    "titulo": {"type": "string"},
    "responsavel": {"type": "string"},
    "colaboradores": {"type": "array", "items": {"type": "string"}},
    "discipline": {"type": "string"},
    "module": {"type": "string"},
    "concepts": {"type": "array", "items": {"type": "string"}},
    "tags": {"type": "array", "items": {"type": "string"}},
    "summary": {"type": "string"},
    "objectives": {"type": "array", "items": {"type": "string"}},
    "deliverables": {"type": "array", "items": {"type": "string"}},
    "files": {"type": "array", "items": {"type": "string"}},
    "related_exercises": {"type": "array", "items": {"type": "string"}},
    "visibility": {"type": "string", "enum": ["private","internal","public"]},
    "status": {"type": "string", "enum": ["draft","active","completed","archived"]},
    "created_at": {"type": "string", "format": "date-time"},
    "updated_at": {"type": "string", "format": "date-time"},
    "start_date": {"type": "string", "format": "date"},
    "end_date": {"type": "string", "format": "date"},
    "version": {"type": "integer", "minimum": 1}
  },
  "additionalProperties": false
}
