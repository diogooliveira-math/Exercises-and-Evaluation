{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build LaTeX Document",
            "type": "shell",
            "command": "pdflatex",
            "args": [
                "-interaction=nonstopmode",
                "exame.tex"
            ],
            "options": {
                "env": {
                    "PATH": "C:\\Users\\diogo\\AppData\\Local\\Programs\\MiKTeX\\miktex\\bin\\x64;C:\\Program Files\\MiKTeX\\miktex\\bin\\x64;${env:PATH}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                {
                    "owner": "latex",
                    "fileLocation": "relative",
                    "pattern": {
                        "regexp": "^(.*):(\\d+):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "message": 3
                    }
                }
            ]
        },
        {
            "label": "Clean LaTeX Auxiliary Files",
            "type": "shell",
            "command": "Remove-Item",
            "args": [
                "*.aux",
                "*.log",
                "*.fdb_latexmk",
                "*.fls",
                "*.synctex.gz",
                "-ErrorAction",
                "SilentlyContinue"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run Build Script",
            "type": "shell",
            "command": ".\\build.ps1",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}